<h1><%= @task.title.capitalize %></h1>
<p><%= @task.details.capitalize %></p>
<% if @task.completed == true %>
  <p>This task is completed</p>
<% else %>
  <p>This task is not completed yet</p>
<% end %>

<p><%= link_to "Edit task", edit_task_path %></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
<p><%= link_to "Back to list", tasks_path %></p>
